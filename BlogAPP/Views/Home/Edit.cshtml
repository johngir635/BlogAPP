@model BlogViewModel

@{
    ViewData["Title"] = "Edit Blog Post";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header">
                    <h3 class="text-center">Edit Blog Post</h3>
                </div>
                <div class="card-body">
                    <form asp-action="CreateBlog" asp-controller="Home" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label for="Title">Title:</label>
                            <input type="text" class="form-control" id="Title" asp-for="Title" />
                        </div>

                        <div class="form-group">
                            <label for="Content">Content:</label>
                            <textarea class="form-control" id="Content" rows="6" asp-for="Content"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="Author">Author:</label>
                            <input type="text" class="form-control" id="Author" asp-for="Author" />
                        </div>

                        <div class="form-group">
                            <label for="CreatedAt">Created At:</label>
                            <input type="text" class="form-control" id="CreatedAt" asp-for="CreatedAt"  />
                        </div>

                        <div class="form-group">
                            <label for="UpdatedAt">Updated At:</label>
                            <input type="text" class="form-control" id="UpdatedAt" asp-for="UpdatedAt"  />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
